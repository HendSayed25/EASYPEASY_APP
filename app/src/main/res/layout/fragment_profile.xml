<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ProfileFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        android:src="@drawable/back"

        />
    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"
        android:src="@drawable/edit_icon"

        />

 <ImageView
     android:id="@+id/user_image"
     android:layout_width="@dimen/_100sdp"
     android:layout_height="100dp"
     app:layout_constraintTop_toBottomOf="@id/back_icon"
     app:layout_constraintStart_toStartOf="parent"
     android:src="@drawable/logo"
     android:layout_margin="25dp"
     />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.353"
        app:layout_constraintStart_toEndOf="@id/user_image"
        app:layout_constraintTop_toBottomOf="@id/edit_icon"
        tools:text="Hend Sayed" />

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/user_image"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/phone_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toEndOf="@id/phone_icon"
        app:layout_constraintTop_toBottomOf="@id/user_image"
        tools:text="24554545454"
/>
   <ImageView
        android:id="@+id/gmail_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/phone_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/message1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/user_gmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toEndOf="@id/phone_icon"
        app:layout_constraintTop_toBottomOf="@id/user_phone"
        tools:text="hkj@gmail.com" />

    <View
        android:id="@+id/top_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/user_gmail"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintEnd_toEndOf="@id/right_guideline"/>

    <TextView
        android:id="@+id/bouns_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_line"

        tools:text="$140.0" />

        <TextView
            android:id="@+id/bouns_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="wallet"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/bouns_money" />

        <View
        android:id="@+id/bottom_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray"
         app:layout_constraintTop_toBottomOf="@id/bouns_money_tv"
         app:layout_constraintStart_toStartOf="@id/left_guideline"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
          android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/center_line"
        android:layout_width="5dp"
        android:layout_height="96dp"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="92dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"
        app:layout_constraintStart_toEndOf="@id/bouns_money_tv"
        app:layout_constraintTop_toBottomOf="@id/top_line"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="@id/center_line"
        app:layout_constraintTop_toBottomOf="@id/top_line"
        tools:text="12" />

    <TextView
        android:id="@+id/order_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="orders"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/center_line"
        app:layout_constraintTop_toBottomOf="@id/order_number" />

    <ImageView
        android:id="@+id/fav_items_profile"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/fav_icon"
        app:layout_constraintTop_toBottomOf="@id/bottom_line"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintBottom_toBottomOf="@id/bottom_guideline"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/your_fav_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Your Favorites"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toEndOf="@id/fav_items_profile"
        app:layout_constraintTop_toBottomOf="@id/bottom_line"

      />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btn_log_out"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:text="@string/log_out"
       android:backgroundTint="@color/gold"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="@id/left_guideline"
       app:layout_constraintEnd_toStartOf="@id/right_guideline"
       android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>